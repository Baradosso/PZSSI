<%- include('./shared/header.ejs') %>

<h1 class="display-4">Autorzy</h1>
 
<button id="modalCreateButton" 
        type="button" 
        class="btn btn-primary" 
        data-bs-toggle="modal" 
        data-bs-target="#authorModalTarget" 
        style="margin-bottom: 10px;">
    Dodaj autora
</button>

<div class="table-responsive">
    <table class="table table-bordered" 
           id="authorsTable">
        <thead>
            <tr>
                <th>Imię</th>
                <th>Nazwisko</th>
                <th>Akcje</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
</div>

<%- include('./shared/footer.ejs') %>

<!-- Modal button  -->
<div class="modal fade" 
     id="authorModalTarget" 
     tabindex="-1" 
     role="dialog" 
     aria-labelledby="authorModal" 
     aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" 
         role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 id="authorModalTitle" 
                    class="modal-title">
                </h5>
                <button type="button" 
                        class="btn-close" 
                        data-bs-dismiss="modal" 
                        aria-label="Close">
            </div>
            <div class="modal-body">
                <div class="form-group row" 
                     style="margin-bottom: 10px;">
                    <label class="col-sm-3 col-form-label" 
                            for="name">
                        Imię:
                    </label>
                    <div class="col-sm-9">
                        <input class="form-control" 
                               type="text" 
                               id="name" 
                               placeholder="Imię..." >
                    </div>
                </div>
                <div class="form-group row" 
                     style="margin-bottom: 10px;">
                    <label class="col-sm-3 col-form-label" 
                           for="surname">
                        Nazwisko:
                    </label>
                    <div class="col-sm-9">
                        <input class="form-control" 
                               type="text" 
                               id="surname" 
                               placeholder="Nazwisko..." >
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" 
                        class="btn btn-secondary" 
                        data-bs-dismiss="modal">
                    Zamknij
                </button>
                <button type="button"
                        id="createAuthorButton"
                        class="btn btn-primary"
                        data-bs-dismiss="modal">
                    Dodaj
                </button>
                <button type="button"
                        id="updateAuthorButton"
                        class="btn btn-primary"
                        data-bs-dismiss="modal">
                    Edytuj
                </button>
            </div>
        </div>
    </div>
</div>

<script type="module" 
        src="./js/authorsOperations.js">
</script>
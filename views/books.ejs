<%- include('./shared/header.ejs') %>

<h1 class="display-4">Zbiór książek</h1>
 
<button id="modalCreateButton" 
        type="button" 
        class="btn btn-primary" 
        data-bs-toggle="modal" 
        data-bs-target="#bookModalTarget" 
        style="margin-bottom: 10px;">
    Dodaj książkę
</button>

<div class="table-responsive">
    <table class="table table-bordered" 
           id="booksTable">
        <thead>
            <tr>
                <th>Tytuł</th>
                <th>Autor</th>
                <th>Akcje</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
</div>

<%- include('./shared/footer.ejs') %>

<!-- Modal button  -->
<div class="modal fade" 
     id="bookModalTarget" 
     tabindex="-1" 
     role="dialog" 
     aria-labelledby="bookModal" 
     aria-hidden="true">
     <div class="modal-dialog modal-dialog-centered" 
          role="document">        
        <div class="modal-content">
            <div class="modal-header">
                <h5 id="bookModalTitle" 
                    class="modal-title">
                </h5>               
                <button type="button" 
                        class="btn-close" 
                        data-bs-dismiss="modal" 
                        aria-label="Close">            
            </div>
            <div class="modal-body">
                <div class="form-group row" 
                     style="margin-bottom: 10px;">
                    <label class="col-sm-3 col-form-label" 
                           for="title">
                        Tytuł:
                    </label>
                    <div class="col-sm-9">
                        <input class="form-control" 
                                type="text" 
                                id="title" 
                                placeholder="Tytuł..." >
                    </div>
                </div>
                <div class="form-group row" 
                     style="margin-bottom: 10px;">
                    <label class="col-sm-3 col-form-label" 
                           for="author">
                        Autor:
                    </label>
                    <div class="col-sm-9">
                        <select class="form-control" 
                                type="search"
                                id="author">
                        </select>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" 
                        class="btn btn-secondary" 
                        data-bs-dismiss="modal">
                    Zamknij
                </button>
                <button type="button"
                        id="createBookButton"
                        class="btn btn-primary"
                        data-bs-dismiss="modal">
                    Dodaj
                </button>
                <button type="button"
                        id="updateBookButton"
                        class="btn btn-primary"
                        data-bs-dismiss="modal">
                    Edytuj
                </button>
            </div>
        </div>
    </div>
</div>

<script type="module" 
        src="./js/booksOperations.js">
</script>